.toast
  position fixed
  z-index 999
  bottom 50%
  left 50%
  width 250px
  background black
  padding 20px 20px 0px 20px
  color white

  span
    position absolute
    right 8px
    top 8px
    cursor pointer

    svg
      width 14px
      height 14px
      fill #ddd
      &:hover
        fill #fff
